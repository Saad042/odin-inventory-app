extends ../layout

block content
  h1 #{title}: !{category.name}

  if category_items.length

    p #[strong The following items will be deleted as well to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Items

      dl
      each item in category_items
        dt
          a(href=item.url) !{item.name}
        dd !{item.description}

  p Do you really want to delete this category?

  form(method='POST' action='')
    div.form-group
      input#categoryid.form-control(type='hidden' name='categoryid' required='true', value=category._id )
      label(for="key") Secret Key 
      input#key.form-control(type='password' name='key' required placeholder="xxxxxxxx")
    button.btn.btn-danger(type='submit') Delete
