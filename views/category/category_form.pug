extends ../layout

block content

  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Groceries, Electronics.' name='name' required='true' value=(undefined===category ? '' : category.name) )

      label(for='description') Description:
      input#name.form-control(type='text' placeholder='A concise description of the category.' name='description' required='true' value=(undefined===category ? '' : category.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
