extends ../layout

block content
  h1 #{title} !{category.name}

  if category_items.length

    div(style='margin-left:20px;margin-top:20px')

      h4 Items

      dl
      each item in category_items
        dt
          a(href=item.url) !{item.name}
        dd !{item.description}

  else
    p No items in this category yet!
